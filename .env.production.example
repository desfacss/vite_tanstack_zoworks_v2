# ===========================================
# Production Environment Variables
# ===========================================
# Copy this file to Vercel Environment Variables
# or rename to .env.production for local prod builds

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Workspace
VITE_WORKSPACE=mep

# API Configuration
VITE_API_BASE_URL=https://api.zoworks.com/

# ===========================================
# Multi-Tenant Auth Configuration
# ===========================================
# Centralized login portal URL
VITE_AUTH_BASE_URL=https://login.zoworks.com

# Base domain for tenant subdomains (without protocol)
VITE_APP_BASE_DOMAIN=zoworks.com

# Cookie domain for cross-subdomain session sharing
# Must start with a dot for subdomain cookies
VITE_COOKIE_DOMAIN=.zoworks.com

# Set to false in production
VITE_DEV_MODE=false

# ===========================================
# Optional Services
# ===========================================
VITE_RESEND_API_KEY=your-resend-api-key
VITE_RESEND_FROM_EMAIL=support@zoworks.ai
VITE_SUPPORT_TO_EMAIL=support@zoworks.com

VITE_PUBLITIO_API_KEY=your-publitio-key
VITE_PUBLITIO_API_SECRET=your-publitio-secret

# Production mode
VITE_APP_ENV=production
