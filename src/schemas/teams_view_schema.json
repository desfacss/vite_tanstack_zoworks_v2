{
  "data_config": {
    "type": "object",
    "required": ["name"],
    "properties": {
      "name": {
        "type": "string",
        "title": "Team Name",
        "minLength": 2
      },
      "details": {
        "type": "object",
        "title": "Team Details",
        "properties": {
          "description": {
            "type": "string",
            "title": "Description"
          },
          "department": {
            "type": "string",
            "title": "Department"
          }
        }
      }
    }
  },
  "ui_schema": {
    "name": {
      "ui:placeholder": "Enter team name",
      "ui:autofocus": true
    },
    "details": {
      "description": {
        "ui:widget": "textarea",
        "ui:placeholder": "Enter team description",
        "ui:options": {
          "rows": 4
        }
      },
      "department": {
        "ui:placeholder": "Enter department name"
      }
    }
  }
}