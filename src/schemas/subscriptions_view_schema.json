{
  "data_config": {
    "type": "object",
    "required": ["name", "module_features", "limits", "is_active"],
    "properties": {
      "name": {
        "type": "string",
        "title": "Subscription Name",
        "minLength": 2
      },
      "module_features": {
        "type": "array",
        "title": "Module Features",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      },
      "limits": {
        "type": "object",
        "title": "Subscription Limits",
        "properties": {
          "users": {
            "type": "integer",
            "title": "User Limit",
            "minimum": 1
          },
          "storage": {
            "type": "string",
            "title": "Storage Limit"
          },
          "price": {
            "type": "number",
            "title": "Price",
            "minimum": 0
          }
        }
      },
      "is_active": {
        "type": "boolean",
        "title": "Active Status",
        "default": true
      }
    }
  },
  "ui_schema": {
    "name": {
      "ui:placeholder": "Enter subscription name",
      "ui:autofocus": true
    },
    "module_features": {
      "ui:widget": "checkboxes",
      "ui:options": {
        "inline": true
      }
    },
    "limits": {
      "users": {
        "ui:widget": "updown"
      },
      "storage": {
        "ui:placeholder": "e.g., 5GB"
      },
      "price": {
        "ui:widget": "updown"
      }
    },
    "is_active": {
      "ui:widget": "select"
    }
  }
}