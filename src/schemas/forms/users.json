{
  "data_schema": {
    "type": "object",
    "required": ["user_id", "organization_id", "role_id"],
    "properties": {
      "user_id": {
        "type": "string",
        "title": "User ID",
        "format": "uuid",
        "description": "Unique identifier for the user"
      },
      "organization_id": {
        "type": "string",
        "title": "Organization",
        "enum": {
          "table": "organizations",
          "column": "id",
          "no_id": false
        },
        "enumNames": {
          "table": "organizations",
          "column": "name"
        },
        "description": "The organization the user belongs to"
      },
      "role_id": {
        "type": "string",
        "title": "Role",
        "enum": {
          "table": "roles",
          "column": "id",
          "no_id": false
        },
        "enumNames": {
          "table": "roles",
          "column": "name"
        },
        "description": "The role assigned to the user"
      }
    }
  },
  "ui_schema": {
    "ui:layout": [
      [
        { "user_id": { "span": 24 } }
      ],
      [
        { "organization_id": { "span": 12 } },
        { "role_id": { "span": 12 } }
      ]
    ],
    "user_id": {
      "ui:widget": "text"
    },
    "organization_id": {
      "ui:widget": "select"
    },
    "role_id": {
      "ui:widget": "select"
    }
  },
  "db_schema": {
    "table": "users",
    "column": "id",
    "multiple_rows": false
  }
}